FROM toxindex-base:latest

# Core workflow files
COPY workflows/celery_worker_rap.py /app/workflows/celery_worker_rap.py
COPY workflows/rap.py /app/workflows/rap.py

# Entrypoint: Celery worker for rap tasks only
CMD ["python", "-m", "celery", "-A", "workflows.celery_worker_rap", "worker", "--loglevel=info", "-Q", "rap"]

